# compiler flags. -g for debug, -03 for optimization
CFLAGS=-g -O3

# First target is build by default
all: tokenizer

# Include file dependencies
tokenizer.o: tokenizer.h
history.o: history.h tokenizer.h
uimain.o: tokenizer.h history.h

# $@=target, $^=prerequisites
tokenizer: tokenizer.o history.o uimain.o
	cc -o $@ $^ $(CFLAGS)

# delete files generated by compilation
clean:
	rm -f *.o *.c~ *.h~ *~ *.c# src

# Run files
run:
	./tokenizer
